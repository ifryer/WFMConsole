            <div> <p style="margin:0"><span style="font-size:10pt;line-height:115%;font-family:Arial,sans-serif">
                (MGR) - @ViewBag.report.Sections["Other"].MGR
            </span></p> </div>
        </div>
    </div>

    <p style="font-size:12.8px"><u><span style="font-size:24pt;background:yellow">
        Total Down: &nbsp;&nbsp; @ViewBag.report.TotalDown
    </span></u></p>

    <div style="font-size:12.8px"><font face="Trebuchet MS" size="4"><span style="font-size:13.5pt"><strong>
        Today's Scheduled Tasks and Events (as of @ViewBag.report.ReportTime)
    </strong></span></font></div>

    <div style="margin-left: 20px;">
        <table>
            <tbody>
                @foreach (var eventItem in ViewBag.report.Events)
                {
                    <tr>
                        <td>
                            <span style="text-decoration: underline; margin-right: 3px;" colorId="@eventItem.ColorId">
                                @eventItem.DateRange
                            </span>
                        </td>
                        <td>
                            <div>
                                <span style="background-color: @eventItem.Color ; margin-right:3px;"> &nbsp; </span>
                                <span title="@eventItem.FullTitle" style="color: #96814e;">
                                    @eventItem.Title
                                </span>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</font>