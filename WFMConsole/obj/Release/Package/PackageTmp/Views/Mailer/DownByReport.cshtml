            <span>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  
                @ViewBag.report.Sections["PTO"].TotalDown 
            </span>
        </span></b></p>
        <div style="margin-left: 45px;">
            <div> <p style="margin:0"> <span style="font-size:10pt;line-height:115%;font-family:Arial,sans-serif">
                (AD) - @ViewBag.report.Sections["PTO"].AD
            </span></p> </div>
            <div> <p style="margin:0"> <span style="font-size:10pt;line-height:115%;font-family:Arial,sans-serif">
