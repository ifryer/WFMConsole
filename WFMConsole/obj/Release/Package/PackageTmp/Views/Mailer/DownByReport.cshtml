    <div>
        <p><b><span style="border-bottom: 1px solid black">
            Other: 
            <span> 
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 
                @ViewBag.report.Sections["Other"].TotalDown 
            </span> 
        </span></b></p>
        <div style="margin-left: 45px;">
            <div> <p style="margin:0"> <span style="font-size:10pt;line-height:115%;font-family:Arial,sans-serif">
                (AD) - @ViewBag.report.Sections["Other"].AD
            </span> </p> </div>
            <div> <p style="margin:0"> <span style="font-size:10pt;line-height:115%;font-family:Arial,sans-serif">
                (RA) - @ViewBag.report.Sections["Other"].RA
            </span> </p> </div>
            <div> <p style="margin:0"> <span style="font-size:10pt;line-height:115%;font-family:Arial,sans-serif">
                (IRC) - @ViewBag.report.Sections["Other"].IRC
            </span> </p> </div>
            <div> <p style="margin:0"><span style="font-size:10pt;line-height:115%;font-family:Arial,sans-serif">
                (Printer/OPS) - @ViewBag.report.Sections["Other"].PrinterOps
            </span></p> </div>
            <div> <p style="margin:0"> <span style="font-size:10pt;line-height:115%;font-family:Arial,sans-serif">
